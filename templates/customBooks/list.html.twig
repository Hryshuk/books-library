{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block content %}

    <h1 class="mt-5">Books with at least 2 authors</h1>

    <h2 class="mt-5">SQL</h2>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Authors Number</th>
                </tr>
                </thead>
                <tbody>
                {% for name, number in books %}
                    <tr>
                        <td>{{ name }}</td>
                        <td>{{ number }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <h2 class="mt-5">ORM</h2>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Authors Number</th>
                </tr>
                </thead>
                <tbody>
                {% for name, number in booksORM %}
                    <tr>
                        <td>{{ name }}</td>
                        <td>{{ number }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}