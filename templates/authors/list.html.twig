{% extends 'authors/layout.html.twig' %}

{% block title %}Books{% endblock %}


{% block page_contents %}

    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Books Number</th>
                </tr>
                </thead>
                <tbody data-books-target="list">
                    {% for author in authors %}
                        <tr>
                            <td>{{ author.firstName }}</td>
                            <td>{{ author.lastName }}</td>
                            <td>{{ author.booksNumber }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}