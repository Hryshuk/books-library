<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Books Library{% endblock %}</title>
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.png">
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

{% block body %}
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Book Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get( '_route' ) in ['app_books_list', 'app_books_view', 'app_books_edit'] %} active {% endif %}" href="{{ path('app_books_list') }}">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get( '_route' ) in ['app_authors_list', 'app_authors_view', 'app_authors_edit'] %} active {% endif %}" href="{{ path('app_authors_list') }}">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get( '_route' ) in ['app_custombooks_list'] %} active {% endif %}" href="{{ path('app_custombooks_list') }}">Books(>1 authors)</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" disabled>
                        <button class="btn btn-outline-success" type="submit" disabled>Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Begin page content -->
    <main class="flex-shrink-0">
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">&copy; 2023 sadgroup.com</span>
        </div>
    </footer>
{% endblock %}

</body>
</html>







