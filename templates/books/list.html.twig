{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}


{% block content %}

    <h1 class="mt-5">Books</h1>

    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Published</th>
                    <th>Authors</th>
                    <th>Cover</th>
                    <th style="width: 130px">&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr data-id="{{ book.id }}">
                            <td >{{ book.name }}</td>
                            <td>{{ book.description }}</td>
                            <td>{{ book.published | date("Y") }}</td>
                            <td>{{ book.authors | map(author => "<a href='#{path('app_authors_view', {'id': author.id})}'>#{author.firstName} #{author.lastName}</>") | join(', ') | raw }} </td>
                            <td>
                                <div class="image" style="background-image: url({{ book.bookCover }})"></div>
                            </td>
                            <td>
                                <a href="{{ path('app_books_view', {'id': book.id}) }}" title="View" type="button" class="btn btn-outline-primary btn-sm">
                                    <i class=" fa-solid fa-eye"></i>
                                </a>
                                <a href="{{ path('app_books_edit', {'id': book.id}) }}" title="Edit" type="button" class="btn btn-outline-success btn-sm">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="{{ path('app_books_delete', {'id': book.id}) }}" title="Delete" onClick="return confirm('Are you sure you want to delete this item?');" type="button" class="btn btn-outline-dark btn-sm">
                                    <i class="fa-sharp fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}